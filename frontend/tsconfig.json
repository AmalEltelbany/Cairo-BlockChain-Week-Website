{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "declarations/*": ["../src/declarations/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src", "../src/declarations/**/*.d.ts"]
}